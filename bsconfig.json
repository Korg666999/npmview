{
  "name": "npmview",
  "sources": [
    {
      "dir": "src",
      "subdirs": true
    }
  ],
  "package-specs": [
    {
      "module": "es6",
      "in-source": true,
      "suffix": ".bs.js"
    }
  ],
  "bs-dependencies": [
    "@rescript/core",
    "@greenlabs/ppx-spice",
    "@rescript/react",
    "rescript-webapi",
    "rescript-blueprint"
  ],
  "ppx-flags": ["@greenlabs/ppx-spice/ppx"],
  "jsx": { "version": 4 },
  "bsc-flags": ["-open RescriptCore"]
}
